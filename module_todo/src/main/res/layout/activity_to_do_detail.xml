<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".ToDoDetailActivity">
	<TextView
			android:id="@+id/tv_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="10dp"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="标题"/>
	<View
			android:id="@+id/view_divider"
			android:layout_width="match_parent"
			app:layout_constraintTop_toBottomOf="@+id/tv_title"
			android:layout_height="@dimen/divider_1dp"
			android:background="@color/colorAccent"/>
	<TextView
			android:id="@+id/tv_desc"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:minLines="3"
			app:layout_constraintTop_toBottomOf="@+id/view_divider"
			tools:text="内容"/>
	<View
			android:id="@+id/view_divider2"
			android:layout_width="match_parent"
			app:layout_constraintTop_toBottomOf="@+id/tv_desc"
			android:layout_height="@dimen/divider_1dp"
			android:background="@color/colorAccent"/>
	<TextView
			android:id="@+id/tv_date"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="10dp"
			app:layout_constraintTop_toBottomOf="@+id/view_divider2"
			tools:text="2019-09-08"/>

	<Button
			android:id="@+id/btn_edit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="编辑"
			android:layout_marginBottom="20dp"
			android:layout_marginStart="20dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			/>
	<Button
			android:id="@+id/btn_delete"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="删除"
			android:layout_marginBottom="20dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toEndOf="@+id/btn_edit"
			/>
	<Button
			android:id="@+id/btn_un_complete"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="未完成"
			android:layout_marginBottom="20dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toEndOf="@+id/btn_delete"
			/>
	<Button
			android:id="@+id/btn_complete"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="完成"
			android:layout_marginBottom="20dp"
			android:layout_marginEnd="20dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toEndOf="@+id/btn_un_complete"
			/>
</androidx.constraintlayout.widget.ConstraintLayout>