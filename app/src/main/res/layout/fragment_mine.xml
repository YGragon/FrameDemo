<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
		android:orientation="vertical"
		tools:context=".ui.mine.MineFragment">
	<View
			android:id="@+id/fake_status_bar"
			android:layout_width="match_parent"
			android:layout_height="@dimen/statusbar_view_height"
			app:layout_constraintTop_toTopOf="parent"
			android:background="@color/colorPrimary"/>

	<TextView
			android:id="@+id/tv_title"
			android:layout_width="match_parent"
			android:layout_height="56dp"
			android:background="@color/colorPrimary"
			android:gravity="center"
			android:text="我的"
			android:textColor="@color/white"
			android:textSize="24sp"
			app:layout_constraintTop_toBottomOf="@+id/fake_status_bar"
	/>
	<androidx.core.widget.NestedScrollView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/tv_title"
	>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
			<TextView
					android:id="@+id/tv_login"
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:background="@color/colorPrimary"
					android:layout_margin="20dp"
					android:text="点击登录"
					android:layout_gravity="center"
					android:gravity="center"
					android:textColor="@color/colorWhite"/>
			<TextView
					android:id="@+id/tv_collect"
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:background="@color/colorPrimary"
					android:layout_margin="20dp"
					android:text="获取收藏列表"
					android:layout_gravity="center"
					android:gravity="center"
					android:textColor="@color/colorWhite"/>
			<TextView
					android:id="@+id/tv_login_out"
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:background="@color/colorPrimary"
					android:layout_margin="20dp"
					android:text="退出登录"
					android:layout_gravity="center"
					android:gravity="center"
					android:textColor="@color/colorWhite"/>
			<TextView
					android:id="@+id/tv_download_apk"
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:background="@color/colorPrimary"
					android:layout_margin="20dp"
					android:text="点击下载 Apk"
					android:layout_gravity="center"
					android:gravity="center"
					android:textColor="@color/colorWhite"/>
			<TextView
					android:id="@+id/tv_download_file"
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:background="@color/colorPrimary"
					android:layout_margin="20dp"
					android:text="点击下载文件"
					android:layout_gravity="center"
					android:gravity="center"
					android:textColor="@color/colorWhite"/>

			<TextView
					android:id="@+id/tv_upload_file"
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:background="@color/colorPrimary"
					android:layout_margin="20dp"
					android:text="点击上传文件"
					android:layout_gravity="center"
					android:gravity="center"
					android:textColor="@color/colorWhite"/>

			<TextView
					android:id="@+id/tv_share"
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:background="@color/colorPrimary"
					android:layout_margin="20dp"
					android:text="跳转分享组件"
					android:layout_gravity="center"
					android:gravity="center"
					android:textColor="@color/colorWhite"/>
			<TextView
					android:id="@+id/tv_map"
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:background="@color/colorPrimary"
					android:layout_margin="20dp"
					android:text="跳转地图组件"
					android:layout_gravity="center"
					android:gravity="center"
					android:textColor="@color/colorWhite"/>
			<TextView
					android:id="@+id/tv_gank_photo"
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:background="@color/colorPrimary"
					android:layout_margin="20dp"
					android:text="跳转干货图片组件"
					android:layout_gravity="center"
					android:gravity="center"
					android:textColor="@color/colorWhite"/>
			<TextView
					android:id="@+id/tv_tree"
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:background="@color/colorPrimary"
					android:layout_margin="20dp"
					android:text="树形列表"
					android:layout_gravity="center"
					android:gravity="center"
					android:textColor="@color/colorWhite"/>
			<TextView
				android:id="@+id/tv_android_jetpack"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:background="@color/colorPrimary"
				android:layout_margin="20dp"
				android:text="AndroidJetpack"
				android:layout_gravity="center"
				android:gravity="center"
				android:textColor="@color/colorWhite"/>
		</LinearLayout>

	</androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>