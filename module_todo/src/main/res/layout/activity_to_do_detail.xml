<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".ToDoDetailActivity">
	<FrameLayout
		android:id="@+id/toolbar_publish"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">
		<include layout="@layout/layout_toolbar" />
	</FrameLayout>
	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginBottom="20dp"
		app:layout_constraintBottom_toTopOf="@+id/btn_edit"
		app:layout_constraintTop_toBottomOf="@+id/toolbar_publish">
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:id="@+id/tv_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="15dp"
				tools:text="2018-08-28"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				/>

			<TextView
				android:id="@+id/tv_end_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="15dp"
				tools:text="2018-08-28"
				app:layout_constraintTop_toBottomOf="@+id/tv_date"
				app:layout_constraintStart_toStartOf="parent"/>
			<View
				android:id="@+id/view_divider"
				android:layout_width="match_parent"
				android:layout_height="0.5dp"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				android:background="@color/black_999"
				app:layout_constraintTop_toBottomOf="@+id/tv_end_date"/>
			<TextView
				android:id="@+id/tv_priority"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="15dp"
				tools:text="重要"
				app:layout_constraintTop_toBottomOf="@+id/view_divider"
				app:layout_constraintStart_toStartOf="parent"/>

			<TextView
				android:id="@+id/tv_type"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="15dp"
				android:textColor="@color/colorPrimary"
				tools:text="类型"
				app:layout_constraintTop_toBottomOf="@+id/tv_priority"
				app:layout_constraintStart_toStartOf="parent"/>
			<View
				android:id="@+id/view_divider1"
				android:layout_width="match_parent"
				android:layout_height="0.5dp"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				android:background="@color/black_999"
				app:layout_constraintTop_toBottomOf="@+id/tv_type"/>

			<TextView
				android:id="@+id/tv_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="15dp"
				tools:text="标题"
				android:textStyle="bold"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/view_divider1"/>
			<TextView
				android:id="@+id/tv_desc"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="15dp"
				android:textStyle="bold"
				tools:text="内容"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/tv_title"/>

			<View
				android:id="@+id/view_divider2"
				android:layout_width="match_parent"
				android:layout_height="0.5dp"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				android:background="@color/black_999"
				app:layout_constraintTop_toBottomOf="@+id/tv_desc"/>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.core.widget.NestedScrollView>


	<Button
			android:id="@+id/btn_edit"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="编辑"
			android:textColor="@color/white"
			android:layout_margin="20dp"
			android:background="@drawable/btn_radius_primary"
			app:layout_constraintHorizontal_weight="1"
			app:layout_constraintEnd_toStartOf="@+id/btn_delete"
			app:layout_constraintBottom_toTopOf="@+id/btn_un_complete"
			app:layout_constraintStart_toStartOf="parent"
			/>
	<Button
			android:id="@+id/btn_delete"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="删除"
			android:textColor="@color/white"
			android:layout_margin="20dp"
			android:background="@drawable/btn_radius_accent"
			app:layout_constraintHorizontal_weight="1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/btn_un_complete"
			app:layout_constraintStart_toEndOf="@+id/btn_edit"
			/>
	<Button
			android:id="@+id/btn_un_complete"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="未完成"
			android:textColor="@color/white"
			android:layout_margin="20dp"
			android:background="@drawable/btn_radius_primary"
			app:layout_constraintHorizontal_weight="1"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/btn_complete"
			/>
	<Button
			android:id="@+id/btn_complete"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="完成"
			android:textColor="@color/white"
			android:layout_margin="20dp"
			android:background="@drawable/btn_radius_accent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_weight="1"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toEndOf="@+id/btn_un_complete"
			/>
</androidx.constraintlayout.widget.ConstraintLayout>